.wrapper
  .creditcard-new-header
    =link_to root_path do
      = image_tag "/logo.png", size: "170x40", class:"done-logo"

  .creditcard-upper-box
    クレジットカード情報入力
  .mains
    = form_tag(pay_creditcards_path, method: :post, id: 'charge-form',  name: "inputForm") do
      .mains__box
        .titles  
          .title
            カード番号
          .required
            必須
        .input
          = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"

        %img.cards{:alt => "", :height => "20", :src => "//pcweb-assets.mercdn.net/assets/img/card/visa.svg?1567313759", :width => "49"}/
        %img.cards{:alt => "", :height => "20", :src => "//pcweb-assets.mercdn.net/assets/img/card/master-card.svg?1567313759", :width => "34"}/
        %img.cards{:alt => "", :height => "20", :src => "//pcweb-assets.mercdn.net/assets/img/card/saison-card.svg?1567313759", :width => "30"}/
        %img.cards{:alt => "", :height => "20", :src => "//pcweb-assets.mercdn.net/assets/img/card/jcb.svg?1567313759", :width => "32"}/
        %img.cards{:alt => "", :height => "20", :src => "//pcweb-assets.mercdn.net/assets/img/card/american_express.svg?1567313759", :width => "21"}/
        %img.cards{:alt => "", :height => "20", :src => "//pcweb-assets.mercdn.net/assets/img/card/dinersclub.svg?1567313759", :width => "32"}/
        %img.cards{:alt => "", :height => "20", :src => "//pcweb-assets.mercdn.net/assets/img/card/discover.svg?1567313759", :width => "32"}/

        %br
        %label
          .titles
            .title
              有効期限
            .required
              必須
          .input-date
            %select#exp_month{name: "exp_month", type: "text"}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            %span
              月
            %select#exp_year{name: "exp_year", type: "text"}
              %option{value: ""} --
              %option{value: "2019"}19
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
            %span 年

        %br
        %label
          .titles
            .title
              セキュリティコード
            .required
              必須
        = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
        #card_token
        = submit_tag "追加する", id: "token_submit"

        = link_to user_path(current_user.id), class: "return" do
          もどる

  .lower-box
    .legal-info-box
    .footer__logo
      .logo-img
        = image_tag "/logo-white.png", size: "160x46"
      .logo-text ©FURIMA